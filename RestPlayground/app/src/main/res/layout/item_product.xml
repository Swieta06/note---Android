<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/cl_product"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_product"
        android:layout_width="80dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/tv_productName"
        android:layout_width="0dp"
        android:layout_margin="12dp"
        android:textStyle="bold"
        tools:text="Fjallraven - Foldsack No. 1 Backpack, Fits 15 Laptops"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_product"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_price"
        android:text="Rp50000"
        app:layout_constraintTop_toBottomOf="@+id/tv_productName"
        app:layout_constraintStart_toStartOf="@+id/tv_productName"
        app:layout_constraintEnd_toEndOf="@+id/tv_productName"

        />

</androidx.constraintlayout.widget.ConstraintLayout>